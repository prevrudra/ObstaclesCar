// Arduino Uno Car - Move Forward Only
// Uses L298N motor driver

// Motor pins (L298N)
#define IN1 2
#define IN2 3
#define IN3 4
#define IN4 5
#define ENA 9  // PWM for left motors
#define ENB 10 // PWM for right motors

void setup() {
  // Motor pins
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);
  pinMode(ENA, OUTPUT);
  pinMode(ENB, OUTPUT);

  Serial.begin(9600);
}

